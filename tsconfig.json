{
  "compilerOptions": {
    "declaration": true,
    "allowJs": false,
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": false,
    "pretty": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__tests__/*"]
}
